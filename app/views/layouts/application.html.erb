<body class="app-sidebar-closed">
<main>
  <header class="app-header">
    <div class="right-menu">
      <nav>
        <ul>
            <li class="help"><a target="_blank" href="https://fusionauth.io/docs/"><i class="fa fa-question-circle-o"></i> Help</a></li>
        </ul>
      </nav>
    </div>
  </header>


<main class="page-body container">
  <div class="row center">
    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-8">
<div class="panel">
  <main>
<p>
<% if session[:user_jwt].nil? %>
<%= link_to "register", register_path %> | <%= link_to "login", login_path %>
<% else %>
<%= link_to "home", root_path %> | <%= link_to "books", articles_path %> 
<% unless session[:user_jwt] && session[:user_jwt]["value"]["authenticationType"] == "WebAuthn" %>
| <a href='<%= Rails.configuration.x.oauth.idp_url%>/account/webauthn'>set up webauthn</a>
<% end %>
| <%= link_to "logout", logout_path %>
</p>


<% end %>
  </main>
</div>

<div class="panel">
  <main>
<%= yield %>
  </main>
</div>
</div>
</div>

<div class="row center">
  <div class="col-xs-6 col-sm-6 col-md-5 col-lg-4">
<!-- I don't know why we need this, but if it goes away everything gets small -->
